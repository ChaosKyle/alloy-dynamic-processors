# AI Provider API Keys (at least one required)
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
GROK_API_KEY=your_grok_api_key_here

# AI Provider Models (optional - uses defaults if not specified)
OPENAI_MODEL=gpt-4
CLAUDE_MODEL=claude-3-sonnet-20240229
GROK_MODEL=grok-beta

# AI Manager Configuration
AI_SELECTION_STRATEGY=health_weighted  # health_weighted, round_robin, cost_optimized
AI_ENABLE_FALLBACK=true

# Service Configuration
LOG_LEVEL=INFO                          # DEBUG, INFO, WARNING, ERROR
ENVIRONMENT=production                  # development, staging, production
AI_SORTER_HOST=0.0.0.0
AI_SORTER_PORT=8000
AI_SORTER_WORKERS=1

# Security Configuration (optional)
AI_SORTER_API_KEYS=                     # Comma-separated list of valid API keys

# Feature Flags
ENABLE_DEBUG_ENDPOINTS=false           # Enable debug endpoints for troubleshooting
ENABLE_ADMIN_ENDPOINTS=false           # Enable admin endpoints for management
ENABLE_TESTING_ENDPOINTS=false         # Enable testing endpoints

# Optional: Configuration file path
AI_SORTER_CONFIG_FILE=                 # Path to YAML configuration file

# Optional: External services
REDIS_URL=redis://redis:6379/0         # Redis for caching (if enabled)

# Monitoring (optional)
GRAFANA_PASSWORD=admin123              # Grafana admin password